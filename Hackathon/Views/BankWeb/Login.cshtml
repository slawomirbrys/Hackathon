
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
<br/><br /><br /><br />

<div class="row">
    <div class="col-md-11" style="text-align:center">
        <img src="../../Content/mbank-logo.png" width="107" hight="40" /><br /><br />
    </div>

    <br/><br />

    @using (Html.BeginForm())
    {

        <div class="form-horizontal">
            <div class="form-group">
                <label for="login" class="control-label col-md-5">Login:</label>
                <div class="col-md-7">
                    <input name="login" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label for="password" class="control-label col-md-5">Password:</label>
                <div class="col-md-7">
                    <input type="password" name="password" class="form-control"/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-5 col-md-7">
                    <input type="submit" value="Login" class="btn btn-danger" />
                </div>
            </div>
        </div>
    }
</div>
